{
  "manifest_version": 3,
  "name": "Color Dropper",
  "version": "1.0",
  "description": "An eye dropper tool to find pixel colors.",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
